{
  "name": "minglog",
  "version": "0.1.0",
  "description": "Modern knowledge management tool built with TypeScript and Tauri",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "test:coverage": "turbo run test:coverage",
    "test:ui": "pnpm --filter ui run test:ui",
    "test:watch": "turbo run test:watch",
    "test:e2e": "turbo run test:e2e",
    "quality:check": "node scripts/quality-check.js",
    "quality:fix": "node scripts/auto-fix.js",
    "perf:analyze": "node scripts/performance-optimization.js",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "build:packages": "pnpm -r --filter \"./packages/*\" build",
    "desktop:dev": "pnpm --filter minglog-desktop dev",
    "desktop:build": "pnpm --filter minglog-desktop build",
    "desktop:pack": "pnpm --filter minglog-desktop pack",
    "desktop:dist": "pnpm --filter minglog-desktop dist",
    "desktop:dist:all": "pnpm --filter minglog-desktop dist:all",
    "web:dev": "pnpm --filter minglog-web dev",
    "web:build": "pnpm --filter minglog-web build",
    "api:dev": "pnpm --filter minglog-api dev",
    "api:build": "pnpm --filter minglog-api build",
    "api:start": "pnpm --filter minglog-api start",
    "dev:full": "pnpm -r --parallel --filter \"minglog-web\" --filter \"minglog-api\" dev",
    "db:generate": "pnpm --filter database generate",
    "db:migrate": "pnpm --filter database migrate",
    "db:studio": "pnpm --filter database studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

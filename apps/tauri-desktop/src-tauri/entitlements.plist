<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Network access for potential future features -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- File system access for import/export operations -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Allow access to user's Documents folder -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Disable library validation for development -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow JIT compilation for JavaScript engine -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow unsigned executable memory for WebView -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Hardened runtime -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Inherit entitlements -->
    <key>com.apple.security.inherit</key>
    <true/>
</dict>
</plist>

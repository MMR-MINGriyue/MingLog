{
  "name": "minglog-desktop",
  "version": "1.0.0",
  "description": "MingLog Desktop - Modern Knowledge Management Tool built with Tauri",
  "type": "module",
  "main": "dist/index.html",
  "homepage": "https://github.com/MMR-MINGriyue/MingLog",
  "author": {
    "name": "MingLog Team",
    "email": "Dasein1997@outlook.com",
    "url": "https://github.com/MMR-MINGriyue"
  },
  "keywords": [
    "knowledge-management",
    "note-taking",
    "productivity",
    "tauri",
    "desktop",
    "rust",
    "react",
    "typescript"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tauri dev",
    "build": "vite build && tauri build",
    "preview": "vite preview",
    "tauri": "tauri",
    "vite:dev": "vite",
    "vite:build": "vite build",
    "vite:preview": "vite preview",
    "clean": "rimraf dist src-tauri/target",
    "clean:deps": "rimraf node_modules src-tauri/target",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css,md}",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "postinstall": "echo 'Tauri Desktop setup complete'"
  },
  "dependencies": {
    "@minglog/core": "workspace:*",
    "@minglog/database": "workspace:*",
    "@minglog/editor": "workspace:*",
    "@minglog/graph": "workspace:*",
    "@minglog/search": "workspace:*",
    "@minglog/ui": "workspace:*",
    "@tauri-apps/api": "^1.6.0",
    "@tauri-apps/plugin-fs": "^1.0.0",
    "@tauri-apps/plugin-dialog": "^1.0.0",
    "@tauri-apps/plugin-shell": "^1.0.0",
    "@tauri-apps/plugin-window": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.6.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  }
}

{
  "name": "minglog-desktop-simple",
  "version": "1.0.0",
  "description": "MingLog Desktop - Simple Version",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage --failOnLowCoverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:ci": "npm run test:all"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.6.0",
    "chart.js": "^4.5.0",
    "i18next": "^25.2.1",
    "lucide-react": "^0.294.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.5.3",
    "react-router-dom": "^6.30.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "vitest run --coverage --failOnLowCoverage"
    ],
    "src/**/*.{css,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@tauri-apps/cli": "^1.6.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.7",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "husky": "^9.0.11",
    "jsdom": "^23.2.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4",
    "vite": "^6.0.0",
    
    "vitest": "^3.2.4"
  }
}

{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@minglog/core": ["../../packages/core/src"],
      "@minglog/database": ["../../packages/database/src"],
      "@minglog/editor": ["../../packages/editor/src"],
      "@minglog/graph": ["../../packages/graph/src"],
      "@minglog/search": ["../../packages/search/src"],
      "@minglog/ui": ["../../packages/ui/src"]
    },

    /* Type definitions */
    "types": ["vite/client", "node"]
  },
  "include": [
    "src",
    "src-tauri/bindings"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}

{
  "name": "minglog-desktop",
  "version": "0.1.0-beta.1",
  "description": "MingLog Desktop Application",
  "main": "dist/main.js",
  "homepage": "https://github.com/MMR-MINGriyue/MingLog",
  "author": {
    "name": "MingLog Team",
    "email": "Dasein1997@outlook.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\"",
    "dev:main": "tsc -w --project tsconfig.main.json",
    "dev:preload": "tsc -w --project tsconfig.preload.json",
    "build": "npm run build:main && npm run build:preload",
    "build:main": "tsc --project tsconfig.main.json",
    "build:preload": "tsc --project tsconfig.preload.json",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder --win --mac --linux",
    "clean": "rimraf dist build",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.minglog.desktop",
    "productName": "MingLog",
    "asar": false,
    "directories": {
      "output": "build",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json",
      "node_modules/electron-updater/**/*",
      "node_modules/electron-store/**/*"
    ],

    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],

      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],

      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "MMR-MINGriyue",
      "repo": "MingLog"
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "electron-store": "^8.1.0"
  }
}

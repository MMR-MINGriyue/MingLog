{
  "name": "@minglog/core",
  "version": "1.0.0",
  "description": "MingLog核心模块管理框架",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run src/**/*.test.{ts,tsx}",
    "test:integration": "vitest run src/test/integration/**/*.test.ts",
    "test:performance": "vitest run src/test/performance/**/*.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e",
    "test:watch": "vitest",
    "test:debug": "vitest --inspect-brk --no-coverage",
    "test:integration": "vitest run src/test/integration/",
    "test:integration:full": "node scripts/run-integration-tests.js",
    "test:core-verification": "npm run test:integration:full",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "quality-check": "node scripts/quality-check.js",
    "pre-commit": "npm run lint && npm run format && npm run type-check",
    "pre-push": "npm run quality-check"
  },
  "keywords": [
    "minglog",
    "knowledge-management",
    "modular",
    "core"
  ],
  "author": "MingLog Team",
  "license": "MIT",
  "dependencies": {
    "@types/d3": "^7.4.0",
    "@types/node": "^24.0.7",
    "d3": "^7.8.5",
    "eventemitter3": "^5.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "slate": "^0.103.0",
    "slate-react": "^0.108.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  }
}

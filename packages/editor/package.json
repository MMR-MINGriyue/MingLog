{
  "name": "@minglog/editor",
  "version": "0.1.0",
  "description": "Block-based editor components for MingLog",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
